<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DropBox.AllItemsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>

    <Grid Background="Transparent"
          AllowDrop="True"
          DragOver="Grid_DragOver"
          Drop="Grid_Drop">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 自定义标题栏（只有关闭按钮） -->
        <Grid Grid.Row="0" Height="32" Background="#2D2D2D" x:Name="CustomTitleBar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- 空白拖动区域 -->
            <Grid Grid.Column="0" x:Name="DragRegion" Background="Transparent"/>
            
            <!-- 关闭按钮 -->
            <Button Grid.Column="1"
                    Width="46"
                    Height="32"
                    Content="&#xE8BB;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="10"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CloseButton_Click">
                <Button.Resources>
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#E81123"/>
                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#C50F1F"/>
                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                </Button.Resources>
            </Button>
        </Grid>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1" Padding="16" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ItemsListView">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="local:DropItem">
                        <Grid Margin="0,0,0,8"
                             Background="#50000000"
                             CornerRadius="8"
                             Padding="12"
                             CanDrag="True"
                             DragStarting="Item_DragStarting">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- 图标/缩略图 -->
                            <Grid Grid.Column="0" Width="48" Height="48" Margin="0,0,12,0">
                                <Border CornerRadius="4">
                                    <Image x:Name="ItemThumbnail"
                                          Visibility="Collapsed"
                                          Stretch="UniformToFill"/>
                                </Border>
                                <FontIcon x:Name="ItemIcon"
                                         Glyph="{x:Bind IconGlyph}"
                                         FontSize="24"
                                         Foreground="#808080"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Grid>

                            <!-- 文件信息 -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Name}"
                                          Foreground="White"
                                          FontSize="14"
                                          TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{x:Bind Description}"
                                          Foreground="#808080"
                                          FontSize="12"
                                          TextTrimming="CharacterEllipsis"
                                          Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- 删除按钮 -->
                            <Button Grid.Column="2"
                                   Width="32"
                                   Height="32"
                                   Padding="0"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Background="Transparent"
                                   Foreground="#808080"
                                   BorderThickness="0"
                                   Click="DeleteItem_Click"
                                   Tag="{x:Bind}">
                                <Button.Resources>
                                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#3D3D3D"/>
                                    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#4D4D4D"/>
                                    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                </Button.Resources>
                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;" FontSize="10"/>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
