<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DropBox.AllItemsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>

    <Grid Background="Transparent"
          AllowDrop="True"
          DragOver="Grid_DragOver"
          Drop="Grid_Drop">
        <Grid.Resources>
            <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <local:NullToVisibilityConverter x:Key="NullToVisibilityConverterInverted" Inverted="True"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏拖动区域 -->
        <Grid Grid.Row="0" 
              x:Name="DragRegion"
              Height="32" 
              Background="Transparent">
            <TextBlock x:Name="TitleTextBlock"
                      Foreground="White"
                      FontSize="12"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      IsHitTestVisible="False"/>
        </Grid>

        <!-- 内容区域 -->
        <ListView Grid.Row="1" 
                 x:Name="ItemsListView"
                 SelectionMode="Single"
                 CanDrag="True"
                 CanDragItems="True"
                 DragItemsStarting="ListView_DragItemsStarting"
                 Background="Transparent"
                 PointerPressed="ListView_PointerPressed">
            <ListView.Resources>
                <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="#0078D4"/>
                <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="#106EBE"/>
                <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPressed" Color="#005A9E"/>
                <SolidColorBrush x:Key="ListViewItemBackgroundPointerOver" Color="#2A2A2A"/>
                <SolidColorBrush x:Key="ListViewItemBackgroundPressed" Color="#404040"/>
            </ListView.Resources>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="4,0.5"/>
                    <Setter Property="MinHeight" Value="28"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border x:Name="Root"
                                       Background="Transparent"
                                       CornerRadius="4">
                                    <Grid>
                                        <!-- 内容区域 -->
                                        <ContentPresenter x:Name="ContentPresenter"
                                                        Margin="8,3"
                                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                        
                                        <!-- 选中指示器（左侧贴边短竖条） -->
                                        <Border x:Name="SelectionIndicator"
                                               Width="3"
                                               Height="16"
                                               Background="Transparent"
                                               CornerRadius="1.5"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="0,0,0,0"/>
                                    </Grid>
                                    
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal"/>
                                            <VisualState x:Name="PointerOver">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background" Value="#0FFFFFFF"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Pressed">
                                                <VisualState.Setters>
                                                    <Setter Target="Root.Background" Value="#1AFFFFFF"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Target="SelectionIndicator.Background" Value="#0078D4"/>
                                                    <Setter Target="Root.Background" Value="#0FFFFFFF"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="PointerOverSelected">
                                                <VisualState.Setters>
                                                    <Setter Target="SelectionIndicator.Background" Value="#0078D4"/>
                                                    <Setter Target="Root.Background" Value="#1AFFFFFF"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                            <VisualState x:Name="PressedSelected">
                                                <VisualState.Setters>
                                                    <Setter Target="SelectionIndicator.Background" Value="#005A9E"/>
                                                    <Setter Target="Root.Background" Value="#25FFFFFF"/>
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:DropItem">
                    <Grid ColumnSpacing="12">
                        <Grid.ContextFlyout>
                            <MenuFlyout Opening="ContextMenu_Opening">
                                <MenuFlyoutItem Text="删除" 
                                              Click="DeleteMenuItem_Click"
                                              Tag="{x:Bind}">
                                    <MenuFlyoutItem.Icon>
                                        <FontIcon Glyph="&#xE74D;"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 图标/缩略图 -->
                        <Grid Grid.Column="0" Width="32" Height="32">
                            <Border CornerRadius="4"
                                   Visibility="{Binding Thumbnail, Converter={StaticResource NullToVisibilityConverter}}">
                                <Image Source="{Binding Thumbnail}"
                                      Stretch="UniformToFill"/>
                            </Border>
                            <FontIcon Glyph="{x:Bind IconGlyph}"
                                     FontSize="20"
                                     Foreground="#808080"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Visibility="{Binding Thumbnail, Converter={StaticResource NullToVisibilityConverterInverted}}"/>
                        </Grid>

                        <!-- 文件名/文本内容 -->
                        <TextBlock Grid.Column="1"
                                  Text="{x:Bind Name}"
                                  Foreground="White"
                                  FontSize="13"
                                  VerticalAlignment="Center"
                                  TextTrimming="CharacterEllipsis"
                                  Margin="0,0,16,0">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="{x:Bind Name}"/>
                            </ToolTipService.ToolTip>
                        </TextBlock>

                        <!-- 文件大小 -->
                        <TextBlock Grid.Column="2"
                                  Text="{x:Bind SizeText}"
                                  Foreground="#707070"
                                  FontSize="11"
                                  VerticalAlignment="Center"
                                  Opacity="0.9"
                                  FontWeight="Normal"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
