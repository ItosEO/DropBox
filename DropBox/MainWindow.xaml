<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DropBox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DropBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="DropBox">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" 
          Background="Transparent"
          AllowDrop="True"
          DragOver="Grid_DragOver"
          DragLeave="Grid_DragLeave"
          Drop="Grid_Drop"
          CornerRadius="8">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏区域（带拖动条） -->
        <Grid Grid.Row="0" 
              x:Name="DragBar"
              Background="Transparent"
              CornerRadius="8,8,0,0">
            <Rectangle Width="30" 
                      Height="3" 
                      Fill="#808080" 
                      RadiusX="2" 
                      RadiusY="2"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"/>
        </Grid>
        
        <!-- 拖放区域 -->
        <Grid Grid.Row="1" x:Name="DropZone" Padding="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 内容区域 -->
            <Grid Grid.Row="0">
                <!-- 空状态提示 -->
                <StackPanel x:Name="EmptyStatePanel"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
                    <TextBlock Text="Drop items here" 
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#B0B0B0"
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- 最新项目显示 -->
                <Grid x:Name="LatestItemPanel"
                     Visibility="Collapsed"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center">
                    <Grid x:Name="LatestItemContainer"
                         Width="180"
                         Height="180"
                         Background="#50000000"
                         CornerRadius="12"
                         CanDrag="True"
                         DragStarting="LatestItem_DragStarting">
                        
                        <!-- 图片缩略图 -->
                        <Border CornerRadius="12">
                            <Image x:Name="LatestThumbnail"
                                  Visibility="Collapsed"
                                  Stretch="UniformToFill"/>
                        </Border>
                        
                        <!-- 文件图标 -->
                        <StackPanel x:Name="LatestIcon"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <FontIcon x:Name="LatestIconGlyph"
                                     FontSize="64"
                                     Foreground="#B0B0B0"
                                     HorizontalAlignment="Center"/>
                            <TextBlock x:Name="LatestItemName"
                                      FontSize="13"
                                      Foreground="White"
                                      TextAlignment="Center"
                                      TextTrimming="CharacterEllipsis"
                                      MaxWidth="160"
                                      Margin="0,12,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!-- 底部按钮 -->
            <StackPanel Grid.Row="1" 
                       Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Spacing="8">
                <Border Background="#40000000"
                       CornerRadius="6"
                       Padding="12,6">
                    <TextBlock x:Name="ItemCountText"
                              Text="0 items"
                              FontSize="12"
                              Foreground="#C0C0C0"/>
                </Border>
                
                <Button x:Name="ShowAllButton"
                       Content="查看全部"
                       Click="ShowAllButton_Click"
                       Background="#40000000"
                       Foreground="White"
                       BorderThickness="0"
                       CornerRadius="6"
                       Padding="16,6"
                       Visibility="Collapsed">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#50000000"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#60000000"/>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 拖放提示边框 -->
        <Border x:Name="DragOverlay"
               Grid.RowSpan="2"
               Background="Transparent"
               BorderBrush="#4A9EFF"
               BorderThickness="0"
               Visibility="Collapsed"
               CornerRadius="8"
               IsHitTestVisible="False"/>
    </Grid>
</Window>
